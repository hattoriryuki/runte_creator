<div class="bg-white py-6 sm:py-8 lg:py-12">
  <div class="max-w-screen-21xl px-4 md:px-8 mx-auto">
    <div class="mb-10 md:mb-10">
      <h2 class="text-2xl font-bold text-center lg:text-3xl mb-4 md:mb-6">login</h2>
    </div>
  </div>
  <%= form_with url: login_path, local: true do |f| %>
    <div class="max-w-screen-md grid sm:grid-cols-2 gap-4 mx-auto">
      <div class="sm:col-span-2">
        <%= f.label :email, class:"inline-block text-sm sm:text-base mb-2" %>
        <%= f.email_field :email, class:"w-full bg-gray-50 border focus:ring ring-purple-400 rounded outline-none transition duration-100 px-3 py-2" %>
      </div>
      <div class="sm:col-span-2">
        <%= f.label :password, class:"inline-block text-sm sm:text-base mb-2" %>
        <%= f.password_field :password, class:"w-full bg-gray-50 border focus:ring ring-purple-400 rounded outline-none transition duration-100 px-3 py-2" %>
      </div>
      <%= f.submit "login", class:"inline-block bg-indigo-500 hover:bg-indigo-600 active:bg-indigo-700 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3" %>
    </div>
    <div class="text-center">
      <%= link_to "登録ページへ", new_user_path %>
      <a href="#">パスワードをお忘れの方はこちら</a>
    </div>
  <% end %>
</div>

