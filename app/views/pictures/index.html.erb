<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-col text-center w-full mb-20">
      <h2 class="sm:text-3xl font-bold text-center mb-4 md:mb-6"><%= t('.title') %></h2>
      <p class="lg:w-2/3 mx-auto leading-relaxed text-base"><%= t('.message') %></p>
    </div>
    <div class="flex flex-wrap sm:-m-4 -mx-4 -mb-10 -mt-4">
      <% if @pictures.present? %>
        <%= render @pictures %>
      <% else %>
        <p><%= t('defaults.message.no_picture') %></p>
      <% end %>
    </div>
  </div>
</section>
