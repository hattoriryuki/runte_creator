<div class="p-4 md:w-1/3 sm:mb-0 mb-6">
  <div id="picture-id-<%= picture.id %>">
    <div class="overflow-hidden">
      <div class="object-cover object-center h-full w-full">
        <%= image_tag "data:image/png;base64," + picture.image, size: '600x360' %>
      </div>
      <h2 class="text-sm title-font font-medium text-indigo-500 mb-1 mt-5"><%= t('.about_user') %></h2>
      <%= link_to picture.user.name, user_path(picture.user), class: 'title-font text-lg font-medium text-gray-900 mb-3' %>
      <p class="leading-relaxed"><%= picture.picture_comment %></p>
    </div>
  </div>
</div>
