<section class="text-gray-600 body-font relative">
  <div class="max-w-screen-md md:px-8 mx-auto">
    <div class="flex flex-col text-center w-full mb-5">
      <h2 class="text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-12"><%= t('.title') %></h2>
    </div>
    <div class="bg-white rouded-lg border border-gray-200 shadow-md relative mb-6 md:mb-8">
      <%= image_tag 'data:image/png;base64,' + @picture.image, class: 'w-full h-full object-cover object-center' %>
    </div>
    <% if @picture.picture_comment.present? %>
      <div class="w-full mx-auto">
        <div class="flex flex-col sm:flex-row justify-between items-center bg-gray-100 rounded-lg gap-4 p-4 md:p-8">
          <h1 class="title-font text-lg font-medium text-gray-900"><%= @picture.picture_comment %></h1>
        </div>
      </div>
    <% end %>
    <div class="md:p-10">
      <p class="text-center text-sm title-font font-medium text-runte-purple mb-3">
        <%= t('.about_user') %>
      </p>
      <div class="flex justify-center">
        <div class="sm:w-24 sm:h-24 h-20 w-20 sm:mr-5 rounded-full overflow-hidden shadow-lg">
          <%= image_tag @picture.user.avatar_url, class: 'w-full h-full object-cover object-center' %>
        </div>
        <%= link_to @picture.user.name, user_path, class: 'title-font text-lg font-medium inline-flex py-6 underline' %>
      </div>
      <div class="flex justify-center mt-10">
        <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-lang="ja" data-size="large" data-hashtags="<%= t('.share') %>" data-show-count="false">Tweet</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
      </div>
    </div>
  </div>
</section>
