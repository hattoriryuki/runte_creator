<div class="bg-white py-6 sm:py-8 lg:py-12">
  <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
    <div class="mb-10 md:mb-10">
      <h2 class="text-2xl font-bold text-center lg:text-3xl mb-4 md:mb-6"><%= t('.title') %></h2>
      <% if @user.errors.any? %>
        <%= render 'shared/error_message', object: @user %>
      <% end %>
    </div>
    <%= render 'shared/user_form', user: @user, url: @user %>  
    <div class="flex justify-center border-t border-gray-200">
      <%= link_to auth_at_provider_path( provider: :twitter ), class: "text-white bg-blue-400 hover:bg-blue-500 font-semibond rounded-lg text-sm px-5 py-3 text-center inline-flex items-center mr-2 mb-5 mt-4" do %>
        <span><i class="fab fa-twitter"></i><%= t('.login_with_twitter') %></span>
      <% end %>
    </div>
  </div>
</div>



