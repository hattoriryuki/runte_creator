<div class="bg-white py-6 sm:py-8 lg:py-12">
  <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
    <div class="mb-10 md:mb-10">
      <h2 class="text-2xl font-bold text-center lg:text-3xl mb-4 md:mb-6"><%= t('.title') %></h2>
      <% if @user.errors.any? %>
        <%= render 'shared/error_message', object: @user %>
      <% end %>
    </div>
    <%= render 'form', user: @user %>
    <%= link_to auth_at_provider_path(provider: :github), class: "btn btn-light" do %>
      <i class="fab fa-github mr-2"></i>
        <span class="has-text-weight-medium">Sign in with Github</span>
    <% end %>
    <%= link_to t('.login_with_twitter'), auth_at_provider_path(provider: :twitter) %>
  </div>
</div>
